+
+static inline int ktime_cmp(ktime_t a, ktime_t b) {
+	ktime_t tmp = ktime_sub(a, b);
+	if (ktime_to_ns(tmp) > 0)
+		return 1;
+	else if (ktime_equal(ktime_set(0,0), tmp))
+		return 0;
+	return -1;
+}
