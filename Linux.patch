+static int get_slacktime(struct atlas_rq *atlas_rq, ktime_t *slack);
+static void cleanup_rq(struct atlas_rq *atlas_rq);
+static inline void setup_rq_exec_timer(struct atlas_rq *atlas_rq,
+		struct atlas_submission *s);
