+//static const unsigned debug_mask = DEBUG_SYS_NEXT | DEBUG_CHECK_PREEMPT | DEBUG_PICK_NEXT_TASK |
+//	DEBUG_PUT_PREV_TASK | DEBUG_ENQUEUE | DEBUG_DEQUEUE | DEBUG_PICK_NEXT_TASK_FALLBACK;
